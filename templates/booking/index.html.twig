{% extends 'base.html.twig' %}

{% block title %}Bookings{% endblock %}

{% block body %}
    <h1>Lists of Bookings</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Guest Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Number of Adults</th>
                <th>Number of Children</th>
                <th>Room Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.guestName }}</td>
                <td>{{ booking.startDate ? booking.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ booking.endDate ? booking.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ booking.numAdults }}</td>
                <td>{{ booking.numChild }}</td>
                <td>{{ booking.room }}</td>

                <td>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('booking_new') }}">Make a Booking </a>
{% endblock %}
