{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
    <h1>Review index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>GuestName</th>
                <th>StaffRating</th>
                <th>CleanRating</th>
                <th>FacilityRating</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.guestName }}</td>
                <td>{{ review.staffRating }}</td>
                <td>{{ review.cleanRating }}</td>
                <td>{{ review.facilityRating }}</td>
                <td>{{ review.comment }}</td>
                <td>
                    <a href="{{ path('review_show', {'id': review.id}) }}">show</a>
                    <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('review_new') }}">Create new</a>
{% endblock %}
